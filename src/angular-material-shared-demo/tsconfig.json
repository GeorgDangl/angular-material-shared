{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@dangl/angular-material-shared/*": [
        "./projects/angular-material-shared/*",
      ],
      "@dangl/angular-material-shared": [
        "./projects/angular-material-shared",
      ]
    },
    "useDefineForClassFields": false
  }
}
